{% extends ':users:personal_page.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/header.css') }}">
{% endblock %}
{% block body%}
    <body>
    {% include 'header.html.twig' %}

    <div class="content marg-auto clearfix ">

        <ul class="main-menu">
            {% for user in users %}
                <li class="sub"><a href={{ path('userPage',{ 'id':user.id}) }}>
                        <p>{{ user.username }}</p>
                        <span>{{ user.firstName }} {{ user.secondName }}</span>
                    </a></li>
            {% endfor %}
        </ul>
    </div>




    </body>
{% endblock %}